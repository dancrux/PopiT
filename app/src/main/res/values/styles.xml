<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="AppTheme.WelcomeScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>

    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="iconTint">@color/textcolor_black</item>


    </style>


    <style name="font_roboto_white">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="get_started_button_properties">
        <item name="android:background">@drawable/shape_button_get_started</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Primary_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="sec_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/secondaryText</item>
    </style>


    <style name="textpropertie_large_label_brown">


        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#9B9B9B</item>

        <item name="android:textSize">15dp</item>
    </style>

    <style name="textpropertie_large_label_black">

        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textcolor_black</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textproperties_small_brown">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/textcolor_brown_light</item>

    </style>

    <style name="textpropertie_large_orange">

        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textcolor_orange</item>

    </style>

    <style name="textproperties_small_black">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/textcolor_black</item>
    </style>

    <style name="viewproperties_proceed_payment">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/shape_button_get_started</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>



</resources>